---
import Layout from "../../layouts/Layout.astro";
import Nav from "../../components/Nav.astro";
import Footer from "../../components/Footer.astro";
import { getEntryBySlug } from "astro:content";

const { slug } = Astro.params;
const post = await getEntryBySlug('blog', slug);
if (!post) throw new Error('Post not found');
const { Content, data } = await post.render();
---
<Layout title={data.title} description={data.description}>
  <Nav />
  <article class="prose prose-invert max-w-3xl mx-auto">
    <h1 class="font-display">{data.title}</h1>
    <p class="text-white/60">{new Date(data.pubDate).toLocaleDateString()}</p>
    <Content />
    {data.tags && <p class="mt-6 text-white/60">Tags: {data.tags.join(", ")}</p>}
  </article>
  <Footer />
</Layout>
